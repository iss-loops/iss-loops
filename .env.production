APP_KEY=base64:9306Zz1iTqnBCjBFQKSBp4drbe8G4Iku32Y7pK8Fd1c=
APP_DEBUG=false
APP_URL=https://iss-loops.com

APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=es_MX

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=daily
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# ====================================
# CONFIGURACIÓN PRODUCCIÓN - MYSQL
# ====================================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=iss_loops_prod
DB_USERNAME=iss_loops_prod_user
DB_PASSWORD=CAMBIAR_POR_PASSWORD_SEGURO_PRODUCCION

# ====================================
# CONFIGURACIÓN PRODUCCIÓN - SESIONES Y CACHE
# ====================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.iss-loops.com

BROADCAST_CONNECTION=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
CACHE_PREFIX=iss_loops

# ====================================
# CONFIGURACIÓN PRODUCCIÓN - REDIS
# ====================================
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ====================================
# MAIL PRODUCCIÓN (Configurar según tu proveedor)
# ====================================
MAIL_MAILER=smtp
MAIL_SCHEME=tls
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=tu_username
MAIL_PASSWORD=tu_password
MAIL_FROM_ADDRESS="no-reply@iss-loops.com"
MAIL_FROM_NAME="${APP_NAME}"

# ====================================
# AWS (Si usas S3 para archivos)
# ====================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ====================================
# VITE
# ====================================
VITE_APP_NAME="${APP_NAME}"